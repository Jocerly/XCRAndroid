<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imagePic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/welcome" />

    <LinearLayout
        android:id="@+id/lin_Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/pad15"
        android:layout_marginTop="@dimen/pad15"
        android:background="@drawable/bg_ad_skip"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/text_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad10"
            android:textColor="@color/white"
            android:textSize="@dimen/font2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过 "
            android:padding="@dimen/pad10"
            android:textColor="@color/white"
            android:textSize="@dimen/font2"
             />
    </LinearLayout>
</RelativeLayout>