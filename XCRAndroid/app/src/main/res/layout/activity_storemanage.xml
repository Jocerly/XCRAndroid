<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:name=".StoreManageActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustResize">

    <include layout="@layout/title_bar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad75"
        android:background="@drawable/text_menu_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                style="@style/text_nomal_style"
                android:text="营业状态" />

            <TextView
                android:id="@+id/textBusinessStatus"
                style="@style/text_nomal_style2"
                android:layout_marginTop="@dimen/pad5"
                android:text="正常状态" />
        </LinearLayout>

        <com.yatang.xc.xcr.views.CheckSwitchButton
            android:id="@+id/cbBusinessStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:gravity="center" />
    </RelativeLayout>

    <View style="@style/line_style" />

    <View
        style="@style/line_style"
        android:layout_marginTop="@dimen/pad20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad60"
        android:background="@drawable/text_menu_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15">

        <TextView
            android:id="@+id/textReciveStatus"
            style="@style/text_nomal_style"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="自动接单" />


        <com.yatang.xc.xcr.views.CheckSwitchButton
            android:id="@+id/cbReciveStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:gravity="center" />
    </RelativeLayout>

    <View style="@style/line_style" />

    <View
        style="@style/line_style"
        android:layout_marginTop="@dimen/pad20" />

    <LinearLayout
        android:id="@+id/rlStoreAbbrevy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad60"
        android:background="@drawable/text_menu_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15"
        android:orientation="horizontal">

        <TextView
            style="@style/text_nomal_style"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="店铺简称" />

        <TextView
            android:id="@+id/textStoreAbbrevy"
            style="@style/text_nomal_style2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="店铺简称" />
    </LinearLayout>

    <View style="@style/line_style" />

    <View
        style="@style/line_style"
        android:layout_marginTop="@dimen/pad20" />

    <RelativeLayout
        android:id="@+id/rlStoreSet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad60"
        android:background="@drawable/text_menu_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15">

        <TextView
            style="@style/text_nomal_style"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="营业设置" />

        <TextView
            style="@style/text_nomal_style2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/next_bg" />
    </RelativeLayout>

    <View style="@style/line_style" />

</LinearLayout>
