<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/pad15">

    <TextView
        android:id="@+id/textGoodsName"
        style="@style/text_nomal_style"
        android:singleLine="true"
        android:text="多少vsdvsv" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/pad5"
        android:layout_marginTop="@dimen/pad5">

        <TextView
            android:id="@+id/textGoodsCode"
            style="@style/text_nomal_style2"
            android:text="多少vsdvsv" />

        <TextView
            android:id="@+id/textTime"
            style="@style/text_nomal_style2"
            android:layout_alignParentRight="true"
            android:text="多少vsdvsv" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                style="@style/text_nomal_style2"
                android:text="成本价：" />

            <TextView
                android:id="@+id/textGoodsPrice"
                style="@style/text_nomal_style2"
                android:text="12.5"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/textGoodsUnit"
                style="@style/text_nomal_style2"
                android:text="/盒"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/textStockType"
                style="@style/text_nomal_style2"
                android:text="数量：" />

            <TextView
                android:id="@+id/textNum"
                style="@style/text_nomal_style2"
                android:text="25"
                android:textColor="@color/red" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>