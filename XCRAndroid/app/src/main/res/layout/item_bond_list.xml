<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_menu_bg"
    android:padding="@dimen/pad15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad50"
        android:layout_toLeftOf="@+id/next"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textBondName"
            style="@style/text_nomal_style"
            android:maxLines="1"
            android:text="缴纳保证金1000元" />

        <TextView
            android:id="@+id/textBondInfo"
            style="@style/text_nomal_style2"
            android:layout_marginTop="@dimen/pad5"
            android:maxLines="1"
            android:text="缴纳保证金1000元" />
    </LinearLayout>

    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/next" />
</RelativeLayout>