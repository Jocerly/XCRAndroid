<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/pad15">

    <ImageView
        android:id="@+id/imagePic"
        android:layout_width="@dimen/pad50"
        android:layout_height="@dimen/pad50"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/task_other" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagePic"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textGoodName"
            style="@style/text_nomal_style"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad15"
            android:text="薯片三只松鼠坚果零食核桃225g碧根果225g"
            />
        <RelativeLayout
            android:layout_marginLeft="@dimen/pad15"
            android:layout_marginTop="@dimen/pad10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/text_small_style"
                android:id="@+id/textUnitPrice"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"
                android:text="￥35.55"
                />

            <TextView
                style="@style/text_small_style"
                android:id="@+id/textCount"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"
                android:text="x2"
                />
            <TextView
                style="@style/text_small_style"
                android:id="@+id/textPrice"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="￥71.10"
                />
            <TextView
                style="@style/text_small_style"
                android:id="@+id/textOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"
                android:layout_toLeftOf="@id/textPrice"
                android:layout_marginRight="@dimen/pad10"
                android:text=""
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>