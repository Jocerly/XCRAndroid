<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/pad15">

    <ImageView
        android:id="@+id/imagePic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/v6" />

    <TextView
        android:id="@+id/textPrivilegeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad15"
        android:singleLine="true"
        android:text="特权名称"
        android:textColor="@color/black"
        android:textSize="@dimen/pad15" />

    <TextView
        android:id="@+id/textPrivilegeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad15"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15"
        android:text="asdfasfasfasdf"
        android:textColor="@color/gray"
        android:textSize="@dimen/pad11" />

</LinearLayout>
