<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgNewcustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:scaleType="fitXY"
        android:src="@drawable/newcustom" />

    <View
        style="@style/line_style"
        android:layout_gravity="bottom" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad20">

        <TextView
            android:id="@+id/imageType"
            style="@style/text_medium_style"
            android:layout_width="@dimen/pad45"
            android:layout_height="@dimen/pad45"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_circle_gray"
            android:gravity="center"
            android:text="券"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/next"
            android:text="" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/pad15"
            android:layout_toLeftOf="@id/textDetails"
            android:layout_toRightOf="@id/imageType"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:id="@+id/textType"
                    style="@style/text_nomal_style2"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/pad10"
                    android:background="@drawable/redback"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="优惠券"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/textName"
                    style="@style/text_nomal_style"
                    android:layout_toLeftOf="@id/textType"
                    android:singleLine="true"
                    android:text="活动名称" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad5"
                android:gravity="left|center_vertical">

                <TextView
                    android:id="@+id/textRemainDays"
                    style="@style/text_nomal_style2"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="剩余4天"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/textTime"
                    style="@style/text_nomal_style2"
                    android:layout_marginRight="@dimen/pad15"
                    android:layout_toLeftOf="@id/textRemainDays"
                    android:singleLine="true"
                    android:text="活动时间" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>