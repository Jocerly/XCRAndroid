<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/pad15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textNumber"
            style="@style/text_nomal_style"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0/0" />

        <TextView
            android:id="@+id/textGoodName"
            style="@style/text_nomal_style"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/pad15"
            android:layout_toLeftOf="@id/textNumber"
            android:gravity="left"
            android:singleLine="true"
            android:text="--" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad5"
        android:layout_marginTop="@dimen/pad15"
        android:max="100"
        android:progressDrawable="@drawable/progressbar_horizontal" />
</LinearLayout>

