<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/base_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />

        <View style="@style/line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/pad15">

            <TextView
                style="@style/text_nomal_style"
                android:layout_height="@dimen/pad30"
                android:gravity="center_vertical"
                android:text="持卡人" />

            <EditText
                android:id="@+id/editCustomName"
                style="@style/edit_normal_none_style"
                android:layout_height="@dimen/pad30"
                android:layout_marginRight="@dimen/pad5"
                android:editable="false"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/pad15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                style="@style/line_style"
                android:layout_marginLeft="@dimen/pad15"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            android:padding="@dimen/pad15">

            <TextView
                style="@style/text_nomal_style"
                android:layout_height="@dimen/pad30"
                android:gravity="center_vertical"
                android:text="身份证" />

            <EditText
                android:id="@+id/editIDNumber"
                style="@style/edit_normal_none_style"
                android:layout_height="@dimen/pad30"
                android:layout_marginRight="@dimen/pad5"
                android:editable="false"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/pad15" />
        </LinearLayout>

        <TextView
            style="@style/text_nomal_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/pad5"
            android:paddingLeft="@dimen/pad15"
            android:paddingTop="@dimen/pad15"
            android:text="请绑定加盟商本人的银行卡（储蓄卡）" />

        <View style="@style/line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/pad15">

            <TextView
                style="@style/text_nomal_style"
                android:layout_height="@dimen/pad30"
                android:gravity="center_vertical"
                android:text="卡号    " />

            <com.yatang.xc.xcr.views.DivisionEditText
                android:id="@+id/editCardNumber"
                style="@style/edit_normal_none_style"
                android:layout_height="@dimen/pad30"
                android:layout_marginRight="@dimen/pad5"
                android:gravity="center_vertical|left"
                android:hint="输入银行卡号"
                android:inputType="numberDecimal"
                android:maxLength="37"
                android:paddingLeft="@dimen/pad15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                style="@style/line_style"
                android:layout_marginLeft="@dimen/pad15"></View>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlBank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad50"
            android:background="@drawable/text_menu_bg"
            android:paddingLeft="@dimen/pad15"
            android:paddingRight="@dimen/pad15">

            <TextView
                style="@style/text_nomal_style"
                android:layout_centerVertical="true"
                android:text="开户行" />

            <TextView
                android:id="@+id/textBank"
                style="@style/text_nomal_style2"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/next_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/pad60"
                android:text="请选择" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                style="@style/line_style"
                android:layout_marginLeft="@dimen/pad15"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/pad15">

            <TextView
                style="@style/text_nomal_style"
                android:layout_height="@dimen/pad30"
                android:gravity="center_vertical"
                android:text="手机号" />

            <EditText
                android:id="@+id/editPhoneNumber"
                style="@style/edit_normal_none_style"
                android:layout_height="@dimen/pad30"
                android:layout_marginRight="@dimen/pad5"
                android:gravity="center_vertical|left"
                android:hint="输入银行预留手机号"
                android:inputType="numberDecimal"
                android:maxLength="11"
                android:paddingLeft="@dimen/pad15" />

            <TextView
                android:id="@+id/btn_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad15"
                android:background="@drawable/btn_explain" />
        </LinearLayout>

        <View style="@style/line_style" />

        <TextView
            style="@style/text_nomal_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/pad5"
            android:paddingLeft="@dimen/pad15"
            android:paddingTop="@dimen/pad15"
            android:text="支行信息" />

        <View style="@style/line_style" />

        <RelativeLayout
            android:id="@+id/rlProvince"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad50"
            android:background="@drawable/text_menu_bg"
            android:paddingLeft="@dimen/pad15"
            android:paddingRight="@dimen/pad15">

            <TextView
                style="@style/text_nomal_style"
                android:layout_centerVertical="true"
                android:text="省市" />

            <TextView
                android:id="@+id/textProvince"
                style="@style/text_nomal_style2"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/next_bg"
                android:gravity="center_vertical"
                android:text="请选择" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                style="@style/line_style"
                android:layout_marginLeft="@dimen/pad15"></View>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlBranchBank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad50"
            android:background="@drawable/text_menu_bg"
            android:paddingLeft="@dimen/pad15"
            android:paddingRight="@dimen/pad15">

            <TextView
                style="@style/text_nomal_style"
                android:layout_centerVertical="true"
                android:text="支行" />

            <TextView
                android:id="@+id/textBranchBank"
                style="@style/text_nomal_style2"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/next_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/pad60"
                android:text="请选择" />
        </RelativeLayout>

        <TextView
            style="@style/text_nomal_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad15"
            android:paddingTop="@dimen/pad5"
            android:text="如：中国建设银行股份有限公司成都天府新区支行，如果您无法确定，请致电您的开户银行客服中心进行咨询。" />

        <TextView
            android:id="@+id/btnConfirm"
            style="@style/btnCirlceRedStyle"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/pad15"
            android:text="@string/ok1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbZhiFuBao"
                style="@style/chenckbox_nomal2_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pad50"
                android:checked="true"
                android:text="同意" />

            <TextView
                android:id="@+id/textProtocol"
                style="@style/text_nomal_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《服务协议》"
                android:textColor="@color/red" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
