<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad60"
        android:background="@color/white"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15">

        <TextView
            android:id="@+id/text1"
            style="@style/text_nomal_style"
            android:layout_centerVertical="true"
            android:text="您的小超编号" />

        <EditText
            android:id="@+id/editMarketNo"
            style="@style/edit_normal_none_style"
            android:layout_height="match_parent"
            android:digits="0123456789"
            android:gravity="center_vertical|right"
            android:hint="请输入小超编号，如000999"
            android:inputType="number"
            android:maxLength="6" />
    </RelativeLayout>

    <View style="@style/line_style"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad60"
        android:background="@color/white"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15">

        <TextView
            android:id="@+id/text2"
            style="@style/text_nomal_style"
            android:layout_centerVertical="true"
            android:text="加盟手机号码" />

        <EditText
            android:id="@+id/editPhone"
            style="@style/edit_normal_none_style"
            android:layout_height="match_parent"
            android:digits="0123456789"
            android:gravity="center_vertical|right"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11" />
    </RelativeLayout>

    <View style="@style/line_style"></View>

    <TextView
        android:id="@+id/btnNext"
        style="@style/btnCirlceRedStyle"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/pad15"
        android:text="@string/next" />

    <TextView
        style="@style/text_nomal_style2"
        android:layout_margin="@dimen/pad20"
        android:text="@string/identy_msg" />
</LinearLayout>