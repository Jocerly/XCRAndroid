<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/pad35"
        android:layout_marginRight="@dimen/pad35"
        android:background="@drawable/dialog_white_bg"
        android:orientation="vertical">

        <TextView
            style="@style/text_nomal_style"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/pad15"
            android:text="选择商品" />

        <TextView
            style="@style/text_nomal_style2"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/pad20"
            android:gravity="center"
            android:text="通过以下一种方式选择入库商品" />

        <View style="@style/line_style"></View>

        <TextView
            android:id="@+id/textFromGoods"
            style="@style/text_nomal_style"
            android:layout_width="match_parent"
            android:background="@drawable/text_menu_bg"
            android:gravity="center"
            android:padding="@dimen/pad15"
            android:text="搜索"
            android:textColor="@color/red" />

        <View style="@style/line_style"></View>

        <TextView
            android:id="@+id/textScan"
            style="@style/text_nomal_style"
            android:layout_width="match_parent"
            android:background="@drawable/text_menu_bg"
            android:gravity="center"
            android:padding="@dimen/pad15"
            android:text="扫码"
            android:textColor="@color/red" />

        <View style="@style/line_style"></View>

        <TextView
            android:id="@+id/textCancle"
            style="@style/text_nomal_style"
            android:layout_width="match_parent"
            android:background="@drawable/dialog_btn_center_bg"
            android:gravity="center"
            android:padding="@dimen/pad15"
            android:text="取消"
            android:textColor="@color/red" />

    </LinearLayout>

</RelativeLayout>