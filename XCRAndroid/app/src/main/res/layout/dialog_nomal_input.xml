<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pad25"
    android:paddingRight="@dimen/pad25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            style="@style/text_medium_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad45"
            android:gravity="center"
            android:text="标题" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad42"
            android:layout_margin="@dimen/pad15"
            android:background="@drawable/edit_dialog_nomal_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pad10"
            android:paddingRight="@dimen/pad10">

            <EditText
                android:id="@+id/editMsg"
                style="@style/edit_nomal_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入" />

        </LinearLayout>

        <View style="@style/line_style"></View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancle"
                style="@style/dialog_left_btn_style" />

            <View style="@style/dialog_cutting_line_style" />

            <Button
                android:id="@+id/btnOk"
                style="@style/dialog_right_btn_style" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>