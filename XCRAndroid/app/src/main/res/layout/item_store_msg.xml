<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_menu_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/pad15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textStoreName"
                    style="@style/text_medium_style"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="一天小草新龙浮点" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad10">

                <TextView
                    style="@style/text_nomal_style"
                    android:layout_centerVertical="true"
                    android:text="编号:"
                    android:textColor="@color/text_light" />

                <TextView
                    android:id="@+id/textStoreSerialNo"
                    style="@style/text_nomal_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="13232323663"
                    android:textColor="@color/text_light" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_bg" />
    </LinearLayout>

    <View
        style="@style/line_style"
        android:layout_marginLeft="@dimen/pad15"></View>

    <TextView
        android:id="@+id/textDefualt"
        style="@style/text_nomal_style"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/select_not"
        android:drawablePadding="@dimen/pad10"
        android:paddingBottom="@dimen/pad15"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15"
        android:paddingTop="@dimen/pad15"
        android:text="设为默认门店" />

    <View style="@style/line_style"></View>
</LinearLayout>