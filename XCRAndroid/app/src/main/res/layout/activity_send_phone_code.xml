<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad60"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15">

        <TextView
            android:id="@+id/text1"
            style="@style/text_nomal_style"
            android:layout_centerVertical="true"
            android:text="验证码" />

        <EditText
            android:id="@+id/editCode"
            style="@style/edit_normal_none_style"
            android:layout_height="match_parent"
            android:digits="0123456789"
            android:gravity="center_vertical|right"
            android:hint="请输入手机验证码"
            android:inputType="number"
            android:maxLength="6" />

        <TextView
            android:id="@+id/btnCode"
            style="@style/btnCodeStyle"
            android:layout_marginLeft="@dimen/pad15"
            android:text="再次获取"
            android:textSize="@dimen/font2_1" />
    </LinearLayout>

    <View style="@style/line_style"></View>


    <TextView
        android:id="@+id/btnNext"
        style="@style/btnCirlceRedStyle"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/pad15"
        android:text="@string/next" />
</LinearLayout>