<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textCamera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad50"
            android:background="@drawable/text_menu_bg"
            android:gravity="center"
            android:text="相机"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font2" />

        <View style="@style/line_style"></View>

        <TextView
            android:id="@+id/textGallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad50"
            android:background="@drawable/text_menu_bg"
            android:gravity="center"
            android:text="从相册中选择"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font2" />

        <TextView
            android:id="@+id/textCancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad50"
            android:layout_marginTop="@dimen/pad10"
            android:background="@drawable/text_menu_bg"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font2" />
    </LinearLayout>
</LinearLayout>