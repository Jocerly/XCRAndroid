<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_menu_bg"
    android:paddingBottom="@dimen/pad1">

    <TextView
        android:id="@+id/textNum"
        style="@style/text_small_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/pad15"
        android:background="@drawable/no1"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/pad15"
        android:layout_toLeftOf="@id/textValue"
        android:layout_toRightOf="@id/textNum"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textGoodsName"
            style="@style/text_nomal_style"
            android:singleLine="true"
            android:text="农夫山泉有点甜" />

        <TextView
            android:id="@+id/textGoodsCode"
            style="@style/text_nomal_style2"
            android:singleLine="true"
            android:text="12345678911" />
    </LinearLayout>

    <TextView
        android:id="@+id/textValue"
        style="@style/text_nomal_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/pad15"
        android:text="100"
        android:textColor="@color/red" />

    <View
        android:id="@+id/viewLine"
        style="@style/line_style"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/textNum" />
</RelativeLayout>