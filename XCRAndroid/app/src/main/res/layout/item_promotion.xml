<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_menu_bg"
    android:orientation="horizontal"
    android:padding="@dimen/pad15">

    <TextView
        android:id="@+id/textType"
        android:layout_width="@dimen/pad42"
        android:layout_height="@dimen/pad42"
        android:background="@drawable/btn_circle_gray"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="券"
        style="@style/text_medium_style"
        android:textColor="@color/white"
         />

    <ImageView
        android:id="@+id/imageNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/next" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textType"
        android:layout_toLeftOf="@id/imageNext"
        android:layout_marginLeft="@dimen/pad15"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textName"
            style="@style/text_nomal_style"
            android:singleLine="true"
            android:text="活动名称" />

        <TextView
            android:id="@+id/textDescribe"
            style="@style/text_nomal_style2"
            android:layout_marginTop="@dimen/pad5"
            android:singleLine="true"
            android:text="活动描述" />

    </LinearLayout>

</RelativeLayout>