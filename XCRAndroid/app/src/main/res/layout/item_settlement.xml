<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/pad15"
        android:background="@drawable/text_menu_bg">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textWeekDay"
                style="@style/text_medium_style"
                android:layout_width="@dimen/pad35"
                android:layout_height="@dimen/pad35"
                android:background="@drawable/btn_circle_gray"
                android:gravity="center"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/textWaitSure"
                style="@style/text_red_origin_style"
                android:layout_marginLeft="@dimen/pad25" />
        </FrameLayout>

        <TextView
            android:id="@+id/textDate"
            style="@style/text_nomal_style"
            android:layout_width="@dimen/pad100"
            android:layout_marginLeft="@dimen/pad10"
            android:gravity="left"
            android:text="2009-99-99" />


        <TextView
            android:id="@+id/textStatue"
            style="@style/text_small_style_gray"
            android:layout_marginLeft="@dimen/pad10"
            android:layout_width="@dimen/pad60"
            android:background="@drawable/settlement_statue_yes"
            android:gravity="center"
            android:text="结算完成" />


        <TextView
            android:id="@+id/textValue"
            style="@style/text_nomal_style"
            android:layout_weight="1"
            android:drawableRight="@drawable/next_bg"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:text="￥--"
            android:textColor="@color/red" />
    </LinearLayout>

    <View style="@style/line_style" />
</LinearLayout>