<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/pad20">

            <ImageView
                android:layout_width="@dimen/pad80"
                android:layout_height="@dimen/pad80"
                android:layout_marginTop="@dimen/pad10"
                android:src="@drawable/logo" />

            <TextView
                style="@style/text_medium_style"
                android:layout_marginTop="@dimen/pad20"
                android:gravity="center"
                android:text="@string/xiaochao_fullname" />

            <TextView
                style="@style/text_nomal_style"
                android:layout_marginTop="@dimen/pad20"
                android:lineSpacingExtra="@dimen/pad8"
                android:text="@string/about_xiaochao_desc" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>