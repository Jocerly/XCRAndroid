<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/pad35">

        <TextView
            style="@style/text_nomal_style2"
            android:gravity="center"
            android:text="顾客扫码关注公众号，进入雅堂小超微信端完成用户注册，即推荐会员成功" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad20"
            android:layout_marginTop="@dimen/pad20"
            android:background="@drawable/whit_cor"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/text_medium_style"
                android:layout_marginTop="@dimen/pad20"
                android:text="微信扫一扫关注" />

            <TextView
                style="@style/text_nomal_style"
                android:layout_marginTop="@dimen/pad8"
                android:text="雅堂小超" />

            <ImageView
                android:id="@+id/imgStoreCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad20"
                android:layout_marginTop="@dimen/pad20" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnSave"
            style="@style/btnCirlceRedStyle"
            android:layout_width="match_parent"
            android:text="保存到相册" />

        <TextView
            style="@style/text_nomal_style2"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/pad10"
            android:gravity="center"
            android:text="制作成台卡，放置在门店收银台前" />
    </LinearLayout>

</LinearLayout>