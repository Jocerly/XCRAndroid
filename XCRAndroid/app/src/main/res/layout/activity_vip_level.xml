<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/viptopback"
        android:paddingTop="@dimen/pad15">

        <com.yatang.xc.xcr.views.CustomViewPager
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/pad5"
            android:background="@null"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingEnd="@dimen/pad50"
            android:paddingStart="@dimen/pad50" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <TextView
        android:id="@+id/textNoData"
        style="@style/text_nomal_style2"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/pad20"
        android:drawablePadding="@dimen/pad20"
        android:drawableTop="@drawable/no_data"
        android:text="暂无特权，敬请期待"
        android:visibility="gone" />
</LinearLayout>
