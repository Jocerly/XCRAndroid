<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/pad15">

        <TextView
            style="@style/text_nomal_style"
            android:text="配送员姓名" />

        <TextView
            android:id="@+id/textName"
            style="@style/text_nomal_style2"
            android:layout_height="@dimen/pad30"
            android:layout_marginRight="@dimen/pad5"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/pad15"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/pad15">

        <TextView
            style="@style/text_nomal_style"
            android:text="配送员电话" />

        <TextView
            android:id="@+id/textPhone"
            style="@style/text_nomal_style2"
            android:layout_height="@dimen/pad30"
            android:layout_marginRight="@dimen/pad5"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/pad15"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/pad15">

        <TextView
            style="@style/text_nomal_style"
            android:text="取货时间" />

        <TextView
            android:id="@+id/textSendTime"
            style="@style/text_nomal_style2"
            android:layout_height="@dimen/pad30"
            android:layout_marginRight="@dimen/pad5"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/pad15"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/pad15">

        <TextView
            style="@style/text_nomal_style"
            android:text="送达时间" />

        <TextView
            android:id="@+id/textReachTime"
            style="@style/text_nomal_style2"
            android:layout_height="@dimen/pad30"
            android:layout_marginRight="@dimen/pad5"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />
    </LinearLayout>

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad20"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15"
        android:paddingTop="@dimen/pad20">

        <TextView
            android:id="@+id/btnReturn"
            style="@style/btnCirlceRedStyle"
            android:layout_width="match_parent"
            android:text="返回" />
    </LinearLayout>
</LinearLayout>