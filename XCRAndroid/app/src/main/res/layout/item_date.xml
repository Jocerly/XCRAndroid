<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_menu_bg"
        android:paddingBottom="@dimen/pad5"
        android:paddingLeft="@dimen/pad15"
        android:paddingRight="@dimen/pad15"
        android:paddingTop="@dimen/pad15">

        <CheckBox
            android:id="@+id/cbAllDate"
            style="@style/chenckbox_nomal_style"
            android:layout_height="@dimen/pad50"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:drawableLeft="@drawable/checkbox_bg"
            android:drawablePadding="@dimen/pad5"
            android:drawableRight="@null"
            android:paddingRight="@dimen/pad15"
            android:text="2016-12-12" />

        <TextView
            android:id="@+id/textAllprice"
            style="@style/text_nomal_style"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/pad15"
            android:layout_toLeftOf="@+id/imgStatus"
            android:text="ï¿¥4000.00" />

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_group_hide" />
    </RelativeLayout>

    <View style="@style/line_style"></View>
</LinearLayout>