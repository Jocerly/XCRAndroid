<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/pad5">

    <TextView
        android:id="@+id/textGoodname"
        style="@style/text_ticket_style2"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:maxLines="2"
        android:text="商品" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textGoodNum"
            style="@style/text_ticket_style2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="数量" />

        <TextView
            android:id="@+id/textGoodUnitValue"
            style="@style/text_ticket_style2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:text="单价" />

        <TextView
            android:id="@+id/textGoodAllValue"
            style="@style/text_ticket_style2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:text="金额" />
    </LinearLayout>
</LinearLayout>